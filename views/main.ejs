    <link href="/css/main.css" rel="stylesheet" type="text/css" />
  </head>
  <body class="is-preload">
    <h1 id="userID" style="display:none"><%= session.user_id %></h1>
    <h1 id="userEmail" style="display:none"><%= session.user_email %></h1>

    <!-- Header -->
